<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to QuizTopia!
Please take this quiz and prove you're not a robot!"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="22sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Which 2 are states in the south?"
            android:textColor="#000000"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mississippiCheckbox"
                android:textSize="15sp"
                android:textColor="#000000"
                android:text="Mississippi"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/idahoCheckbox"
                android:textSize="15sp"
                android:textColor="#000000"
                android:text="Idaho"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/floridaCheckbox"
                android:textSize="15sp"
                android:textColor="#000000"
                android:text="Florida"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/washingtonCheckbox"
                android:textSize="15sp"
                android:textColor="#000000"
                android:text="Washington"
                />
        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What are the first 3 letters of the alphabet?"
            android:textSize="20sp"
            android:textColor="#000000"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/alphabetBox"
            android:hint="Write your answer here. example: apple "
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How many squares does a triangle have?"
            android:textSize="20sp"
            android:textColor="#000000"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/oneRadioButton"
                    android:text="1"
                    android:textColor="#000000"
                    />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/threeRadioButton"
                    android:text="3"
                    android:textColor="#000000"

                    />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/sevenRadioButton"
                    android:text="7"
                    android:textColor="#000000"
                    android:layout_toLeftOf="@id/noneRadioButton"
                    />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/noneRadioButton"
                    android:layout_toLeftOf="@id/threeRadioButton"
                    android:text="none"
                    android:textColor="#000000"
                    />

            </RadioGroup>


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Is my left your left if I am behind the person in your reflexion?"
            android:textSize="20sp"
            android:textColor="#000000"
            />


        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/trueRadioButton"
                android:text="True"
                android:textColor="#000000"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/falseRadioButton"
                android:layout_toRightOf="@id/trueRadioButton"
                android:text="False"
                android:textColor="#000000"
                />

        </RadioGroup>



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit Answers"
            android:id="@+id/submitButton"
            android:textColor="#000000"
            android:onClick="submitQuiz"

            />


        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/answers"-->
        <!--android:text="nothing now"/>-->
    </LinearLayout>




</ScrollView>



</android.support.constraint.ConstraintLayout>